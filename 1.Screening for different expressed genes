choose_50 <- arrange(express,adj.P.Val)%>% .[1:50,] #选择P前50

# choose_50 <- arrange(express, desc(logFC))%>% .[1:50,] 选择差异倍数前50
rownames(express) <- express$X
set <- settt[choose_50$X,] %>% scale(.,center = T) 
rownames(set)<- gsub("///.*", "", rownames(set)) #保留一个行名

